{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@src/*": ["src/*"]
		},
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "react",
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "commonjs",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"outDir": "dist",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "es5",
		"sourceMap": true
	},
	"include": ["src/"],
	"exclude": ["node_modules", "dist", "public"]
}
